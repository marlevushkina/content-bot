# Telegram Bot API token from @BotFather
TELEGRAM_BOT_TOKEN=

# Deepgram API key for voice transcription
DEEPGRAM_API_KEY=

# Path to Obsidian vault directory
VAULT_PATH=./vault

# JSON array of Telegram user IDs allowed to use the bot
# Find your ID: message @userinfobot in Telegram
ALLOWED_USER_IDS=[123456789]

# Google Drive folder ID with Fireflies transcripts (optional)
GOOGLE_DOCS_FOLDER_ID=

# Path to Google service account JSON key (optional, for Fireflies sync)
GOOGLE_CREDENTIALS_PATH=

# Telegram channel username to read posts from (without @, optional)
TELEGRAM_CHANNEL=
